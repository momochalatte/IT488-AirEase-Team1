	  </Compile>
	  <Compile Update="CartPage.xaml.cs">
	    <DependentUpon>CartPage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="EditProfilePage.xaml.cs">
	    <DependentUpon>EditProfilePage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="CheckInPage.xaml.cs">
	    <DependentUpon>CheckInPage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="RewardsPage.xaml.cs">
	    <DependentUpon>RewardsPage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="PaymentConfirmationPage.xaml.cs">
	    <DependentUpon>PaymentConfirmationPage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="PaymentPage.xaml.cs">
	    <DependentUpon>PaymentPage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="SignInPage.xaml.cs">
	    <DependentUpon>SignInPage.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="ProfilePage.xaml.cs">
	    <DependentUpon>ProfilePage.xaml</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <MauiImage Update="Resources\Images\aireaselogo.png">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </MauiImage>
	  <MauiImage Update="Resources\Images\ic_calendar.png">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </MauiImage>
	  <MauiImage Update="Resources\Images\ic_checkin.png">
