<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="IT488_Reg_Form.AccountRecoveryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Account Recovery"
    BackgroundColor="White">

    <ContentPage.Resources>
        <Color x:Key="BrandBlue">#2C79B9</Color>
        <Color x:Key="ErrorRed">#D32F2F</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <!-- Header -->
            <Grid ColumnDefinitions="40,*" Padding="0,0,0,8">
                <Image Source="aireaselogo.png" HeightRequest="32" WidthRequest="32"/>
                <Label Grid.Column="1" Text="AirEase" FontSize="22" FontAttributes="Bold" VerticalTextAlignment="Center"/>
            </Grid>

            <!-- Forgot Password -->
            <Label Text="Reset Password" FontAttributes="Bold" FontSize="18"/>
            <Label Text="Enter your email and date of birth to reset your password." TextColor="#555"/>

            <Label Text="Email"/>
            <Entry x:Name="ResetEmailEntry" Keyboard="Email" Placeholder="name@example.com"/>

            <Label Text="Date of birth"/>
            <DatePicker x:Name="ResetDobPicker"/>

            <Label Text="New password"/>
            <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Min 8 chars, 1 upper, 1 digit, 1 symbol"/>

            <Label Text="Confirm password"/>
            <Entry x:Name="ConfirmNewPasswordEntry" IsPassword="True"/>

            <Button Text="Reset Password"
                    BackgroundColor="{StaticResource BrandBlue}" TextColor="White"
                    CornerRadius="8" HeightRequest="46"
                    Clicked="ResetPassword_Clicked"/>

            <Label x:Name="ResetStatus" TextColor="{StaticResource ErrorRed}" IsVisible="False"/>

            <!-- Divider -->
            <BoxView HeightRequest="1" BackgroundColor="#DDD" Margin="0,12"/>

            <!-- Forgot Username (email) -->
            <Label Text="Forgot Email (Username)" FontAttributes="Bold" FontSize="18"/>
            <Label Text="Find your email by entering your name and date of birth." TextColor="#555"/>

            <Label Text="First name"/>
            <Entry x:Name="FindFirstNameEntry" Placeholder="e.g., Jane"/>

            <Label Text="Last name"/>
            <Entry x:Name="FindLastNameEntry" Placeholder="e.g., Doe"/>

            <Label Text="Date of birth"/>
            <DatePicker x:Name="FindDobPicker"/>

            <Button Text="Find My Email"
                    BackgroundColor="#EEEEEE" TextColor="#222"
                    CornerRadius="8" HeightRequest="46"
                    Clicked="FindEmail_Clicked"/>

            <Label x:Name="FindStatus" TextColor="{StaticResource ErrorRed}" IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
