<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PaymentPage.PaymentPage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
            </Frame>
            <VerticalStackLayout/>
            <Label Text="Flight Info: Pennsylvania ->Florida" FontAttributes="Bold"/>
    <Label Text="$XXX.XX" FontSize="24" TextColor="DarkGreen"/>

    <Label Text=":Billing Information" FontAttributes="Bold" />
    <Entry Placeholder="Full Name"/>
    <Entry Placeholder="Address"/>

    <Label Text="Payment Details" FontAttributes="Bold" />
    <Entry Placeholder="Card Number" Keyboard="Numeric"/>
    <HorizontalStackLayout Spacing="10">
        <Entry Placeholder="Expiry Date" Keyboard="Numeric"/>
        <Entry Placeholder="CVV" Keyboard="Numeric" WidthRequest="100"/>
    </HorizontalStackLayout>

    <Button Text="Book Now" BackgroundColor="DarkBlue" TextColor="White" CornerRadius="5"/>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>

